
#include<stdio.h>
#include <stdlib.h>
#define MAx 4 //defining size of the array
int stack_arr[MAx]; //declaring global variables for array and

int top = -1;
void push(int data){
 if(top == MAx-1){
 printf("Stack overflow");
 return; //to return back to the code
 }
 top = top + 1;
 stack_arr[top] = data;
}
int pop(){
 int value;
 if (top == -1){ //checking for stack underflow
 printf("Stack underflow");
 exit(1); //abnormal termination of the program as we do

 }
 value = stack_arr[top];
 top = top-1;
 return value;
}
void print(){
 if(top == -1){
 printf("stack underflow");
 return;
 }
 printf("The elements of the stack are : \n");
 for(int i = top;i>=0 ;i--){
 printf("%d \n", stack_arr[i]);
 }

}
int main(){
 int data;
 int choice;
 while(1){

 printf("Enter 1 if you want to push \n");
 printf("Enter 2 if you want to pop \n");
 printf("Enter 3 if you want to print the stack \n");
 printf("Enter 4 to quit : ");
 scanf("%d",&choice);
 switch (choice)
 {
 case 1:
 printf("Enter the element to be pushed: ");
 scanf("%d",&data);
 push(data);
 break;
 case 2:
 data = pop();
 printf("The element %d has been deleted \n",data);
 break;
 case 3:
 print();
 break;
 case 4:
 exit(1);

 }
 }
 return 0 ;
} 
