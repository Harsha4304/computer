import java.applet.Applet;
import java.awt.*;
 

 
/*
<applet code="AppletParam" width=500 height=500>
        <param name="msg" value="This is a parameter example program"/>
        <param name="xPosition" value="100"/>
        <param name="yPosition" value="100"/>
</applet>
*/
 
public class AppletParam extends Applet
{
 
        public void paint(Graphics g)
	{
                
                 setBackground(Color.cyan);
		int x = 0;
                int y = 0;
                String msg = "";
                
                try
		{
                        x = Integer.parseInt(getParameter("xPosition"));
                }
                catch(NumberFormatException ne)
		{
                        msg = msg + "Invalid x Value";
                }
                
                try
		{
                        y = Integer.parseInt(getParameter("yPosition"));
                }
                catch(NumberFormatException ne)
		{
                        msg = msg + "Invalid y Value";
                }
                
                msg = getParameter("msg");
                
                g.drawString(msg, x, y);
        }
}
