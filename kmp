#include<stdio.h>
#include<string.h>
char t[100];
char p[100];
int n=10,m=3,i;
//n=strlen(t);
int arr[100];
void overlap(char p[],int m){
	int i=0,j=0;
	arr[0]=0;
	for(j=1;j<m;j++){
		if(p[j]!=p[i]){
		arr[j]=0;
		i=0;
		}
		else{//p[i]==p[j]
			arr[j]=i+1;
			i++;
		}
	}
}
int KMPA(char t[],char p[],int n, int m){
	int o,i=0,j=0;
	while(i<=n){
		if(t[i]==p[j]){
			if(j==m-1){
				printf("\npatten at index %d",i-j);
				break;
			}
		i++;
		j++;
		}
		else{//t[i]!=p[i]
		// printf("Not found");
			if(j>0)
				j=arr[j-1];
			else
				i++;
		}
	}
}





int main(){


	printf("Enter the text : ");
	gets(t);
	printf("Enter the pattern : ");
	gets(p);
	//printf("the text is %s\nthe pattern is %s",t,p);
	n=strlen(t);
	m=strlen(p);
	printf("%d %d \n",n,m);
	printf("%s\n",p);
	printf("\n");
	printf("%s\n",t);
	printf("\n");
	overlap(p,m);
	printf("Overlap table\n");
	
	for(i=0;i<m;i++){
		printf("%d",arr[i]);
	}
	KMPA(t,p,n,m);
	return 0;
}
