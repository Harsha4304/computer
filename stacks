#include<stdio.h>;
#include<stdlib.h>;
struct node{
int data;
struct node*link;
}*head;
void push(){
struct node*temp=(struct node*)malloc(sizeof(struct node));
int element;
printf("Enter the element : ");
scanf("%d",&element);
if(head==NULL){
temp->data=element;
temp->link=NULL;
head=temp;
}
else{
temp->data=element;
temp->link=head;
head=temp;
}
}
void pop(){
int item;
struct node *temp;
temp=head;
if(temp==NULL){
printf("Stack is empty");
}
else{
item=temp->data;
printf("The element deleted is %d\n",item);
head=temp->link;
free(temp);
}
}
void display(){
int i;
struct node *temp;
head=temp;
if (head==NULL){
printf("Stack is empty");
}
else{
printf("Elements are:\n");
while(temp!=NULL){
printf("%d\n",temp->data);
temp=temp->link;
}
}
}
int main(){
int choice;
do{

printf("Enter your choice:\n1.Insertion\n2.deletion\n3.display stack\n4.exit\n");
scanf("%d",&choice);
switch(choice){
case 1:
push();
break;
case 2:
pop();
break;
case 3:
display();
break;
case 4:
exit(0);
break;
default:
printf("Irrelevant choice");
break;
}
}while(choice!=4);
return (0);
} 
